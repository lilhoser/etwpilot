<UserControl x:Class="EtwPilot.View.SettingsFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:EtwPilot.ViewModel"
             xmlns:view="clr-namespace:EtwPilot.View"
             xmlns:Fluent="urn:fluent-ribbon"
             xmlns:controls="clr-namespace:EtwPilot.Controls"
             mc:Ignorable="d"
             Name="SettingsFormViewControl"
             Loaded="SettingsFormViewControl_Loaded"
             DataContext="{Binding Source={x:Static vm:GlobalStateViewModel.Instance}, Path=Settings, ValidatesOnNotifyDataErrors=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TabControl Name="SettingsTabControl">
            <TabItem Header="General">
                <AdornerDecorator>
                <StackPanel Orientation="Vertical" Margin="5">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Width="150">Symbol path:</Label>
                        <TextBox Name="SymbolPathTextBox"
                             Width="350"
                             Validation.ErrorTemplate="{StaticResource ErrorTemplateBelow}"
                             Text="{Binding SymbolPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}" />
                        <Button Name="BrowseSymbolPathButton" 
                                Click="BrowseSymbolPathButton_Click">Browse...</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Width="150">Dbghelp.dll path:</Label>
                        <TextBox Name="DbgHelpDllPathTextBox" 
                             Width="350"
                             Validation.ErrorTemplate="{StaticResource ErrorTemplateBelow}"
                             Text="{Binding DbghelpPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}"/>
                        <Button Name="BrowseDbgHelpDllPathButton" Click="BrowseDbgHelpDllPathButton_Click">Browse...</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Width="150">Provider cache path:</Label>
                        <TextBox Name="ProviderCachePathTextBox" 
                             Width="350"
                             Validation.ErrorTemplate="{StaticResource ErrorTemplateBelow}"
                             Text="{Binding ProviderCacheLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}"/>
                        <Button Name="BrowseProviderCachePathButton" Click="BrowseProviderCachePathButton_Click">Browse...</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">    
                        <CheckBox Name="HideNoManifestProvidersCheckbox" 
                              Padding="5"
                              IsChecked="{Binding HideProvidersWithoutManifest, Mode=TwoWay,ValidatesOnNotifyDataErrors=True}"/>
                        <TextBlock TextWrapping="Wrap" Text="Hide providers without a manifest" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <CheckBox Name="UseDefaultEtwColumnsCheckbox" 
                              Padding="5"
                              IsChecked="{Binding UseDefaultEtwColumns, Mode=TwoWay,ValidatesOnNotifyDataErrors=True}"/>
                        <TextBlock TextWrapping="Wrap" Text="Use default ETW display columns" />
                    </StackPanel>
                </StackPanel>
                </AdornerDecorator>
            </TabItem>
            <TabItem Header="Insight">
                <StackPanel>
                    <TabControl>
                        <TabItem Header="Chat Completion Runtime">
                        <AdornerDecorator>
                            <StackPanel Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <RadioButton x:Name="runtimeOnnxRadioButton" 
                                            Content="ONNX Runtime GenAI" 
                                            Checked="runtimeOnnxRadioButton_Checked"
                                            Margin="0,0,10,0"
                                            IsChecked="{Binding Path=OnnxGenAIConfig, Converter={StaticResource NotNullToBooleanConverter}, Mode=OneWay}" />
                                <RadioButton x:Name="runtimeOllamaRadioButton" 
                                            Checked="runtimeOllamaRadioButton_Checked"
                                            Content="Ollama"
                                            IsChecked="{Binding Path=OllamaConfig, Converter={StaticResource NotNullToBooleanConverter}, Mode=OneWay}"/>
                            </StackPanel>
                            <!-- ONNX runtime genai configuration section -->
                            <Expander Header="ONNX Runtime GenAI Configuration"
                                      Margin="5"
                                      IsExpanded="{Binding IsChecked, ElementName=runtimeOnnxRadioButton}">
                            <StackPanel Orientation="Vertical" Margin="0">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Label Width="150">Model path:</Label>
                                    <TextBox Name="OnnxModelPathTextbox"
                                         Width="350"
                                         VerticalAlignment="Top"
                                         Validation.ErrorTemplate="{StaticResource ErrorTemplateBelow}"
                                         Text="{Binding OnnxGenAIConfig.ModelPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}" />
                                    <Button Name="BrowseOnnxModelPathButton" 
                                            VerticalAlignment="Top"
                                            Click="BrowseOnnxModelPathButton_Click">Browse...</Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <StackPanel Orientation="Vertical"/>
                                            </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <StackPanel Orientation="Vertical">
                                        <Label Width="150">BERT model path:</Label>
                                        <TextBlock Margin="5,0,0,0">
                                        <Hyperlink NavigateUri="https://huggingface.co/sentence-transformers" RequestNavigate="Hyperlink_RequestNavigate">Download BERT models
                                        </Hyperlink>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBox Name="BertModelPathTextbox"
                                         Width="350"
                                         VerticalAlignment="Top"
                                         Validation.ErrorTemplate="{StaticResource ErrorTemplateBelow}"
                                         Text="{Binding OnnxGenAIConfig.BertModelPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}" />
                                    <Button Name="BrowseBertModelPathButton" 
                                            VerticalAlignment="Top"
                                            Click="BrowseBertModelPathButton_Click">Browse...</Button>
                                </StackPanel>
                            </StackPanel>
                            </Expander>
                             <!-- Ollama configuration section -->
                            <Expander Header="Ollama Configuration"
                                      Margin="5"
                                      IsExpanded="{Binding IsChecked, ElementName=runtimeOllamaRadioButton}">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Margin="5,10,5,10">
                                    <Label Width="150">Ollama endpoint URI:</Label>
                                    <TextBox Name="OllamaEndpointUri"
                                         Width="350"
                                         Validation.ErrorTemplate="{StaticResource ErrorTemplateRight}"
                                         Text="{Binding OllamaConfig.EndpointUri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5,10,5,10">
                                    <Label Width="150">Model:</Label>
                                    <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                        <ComboBox Name="OllamaModelName"
                                             HorizontalAlignment="Left"
                                             ItemsSource="{Binding OllamaConfig.ModelNames.AsObservable}"
                                             Width="120"
                                             SelectedItem="{Binding OllamaConfig.ModelName,Mode=TwoWay,ValidatesOnNotifyDataErrors=True}"
                                             IsEnabled="{Binding OllamaConfig.IsEndpointValid}"
                                             Validation.ErrorTemplate="{StaticResource ErrorTemplateRight}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Width="150">Download new:</Label>
                                            <TextBox Name="OllamaDownloadNewModelTextbox"
                                                 Width="120"
                                                 IsEnabled="{Binding OllamaConfig.IsEndpointValid}"/>
                                            <Button Name="OllamaDownloadNewModelButton"
                                                Click="OllamaDownloadNewModelButton_Click"
                                                IsEnabled="{Binding OllamaConfig.IsEndpointValid}"
                                                Margin="5,0,0,0"
                                                >Download</Button>
                                            <Button Name="OllamaCancelDownloadNewModelButton"
                                                Click="OllamaCancelDownloadNewModelButton_Click"
                                                Visibility="{Binding OllamaConfig.CancelModelDownloadButtonVisibility}"
                                                Margin="5,0,0,0"
                                                >Cancel</Button>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0">
                                            <TextBlock Margin="5">
                                            <Hyperlink NavigateUri="https://ollama.com/search?c=tools" RequestNavigate="Hyperlink_RequestNavigate">Models supporting tools
                                            </Hyperlink>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5,10,5,10">
                                    <Label Width="150">Text embedding model:</Label>
                                    <ComboBox Name="OllamaTextEmbeddingModelName"
                                         ItemsSource="{Binding OllamaConfig.ModelNames.AsObservable}"
                                         Width="120"
                                         SelectedItem="{Binding OllamaConfig.TextEmbeddingModelName,ValidatesOnNotifyDataErrors=True}"
                                         IsEnabled="{Binding OllamaConfig.IsEndpointValid}"
                                         Validation.ErrorTemplate="{StaticResource ErrorTemplateRight}"/>
                                </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="5,0,0,0"/>
                                        </StackPanel>
                            </Expander>
                            <StackPanel Margin="0">
                                <Label Name="InsightTabStatusMessage"
                                    Visibility="{Binding OperationInProgressVisibility}"
                                    Foreground="Green"
                                    BorderBrush="Green"
                                    BorderThickness="1"
                                    Content="{Binding OperationInProgressMessage}"/>
                            </StackPanel>
                            </StackPanel>
                        </AdornerDecorator>
                        </TabItem>
                        <TabItem Header="RAG">
                            <AdornerDecorator>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Label Width="150">Qdrant host URI:</Label>
                                <TextBox Name="QdrantHostUri"
                                     Width="350"
                                     Validation.ErrorTemplate="{StaticResource ErrorTemplateRight}"
                                     Text="{Binding QdrantHostUri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}" />
                            </StackPanel>
                            </AdornerDecorator>
                        </TabItem>
                        <TabItem Header="Prompt settings">
                            <AdornerDecorator>
                                <StackPanel Orientation="Vertical" Margin="10">
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock TextWrapping="Wrap" Text="Context Window Size (Max Tokens):" 
                                                   Width="180"
                                                   Margin="5,0,0,0"
                                                   HorizontalAlignment="Right"/>
                                        <TextBox Width="45"
                                                 Margin="-5,0,0,0"
                                                 VerticalAlignment="Top"
                                                 Text="{Binding PromptExecutionSettingsDto.MaxTokens, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <Label Width="180">Max Output Tokens:</Label>
                                        <TextBox Width="45"
                                                 VerticalAlignment="Top"
                                                 Text="{Binding PromptExecutionSettingsDto.NumPredict, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <Label Width="180">Temperature:</Label>
                                        <TextBox Width="45"
                                                 VerticalAlignment="Top"
                                                 Text="{Binding PromptExecutionSettingsDto.Temperature, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <Label Width="180">Top_P:</Label>
                                        <TextBox Width="45"
                                                 VerticalAlignment="Top"
                                                 Text="{Binding PromptExecutionSettingsDto.TopP, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <CheckBox Name="ShowModelReasoningCheckbox" 
                                                  Margin="5"
                                                  Padding="5"
                                                  IsChecked="{Binding PromptExecutionSettingsDto.ShowReasoning, Mode=TwoWay,ValidatesOnNotifyDataErrors=True}"/>
                                        <Label VerticalAlignment="Top">Show model reasoning output in responses</Label>
                                    </StackPanel>
                                </StackPanel>
                            </AdornerDecorator>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </TabItem>
            <TabItem Header="Debug">
                <AdornerDecorator>
                <StackPanel Orientation="Vertical" Margin="5">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Width="150">EtwPilot trace level:</Label>
                        <ComboBox Width="150"
                                  ItemsSource="{Binding Source={StaticResource SourceLevelsEnum}}"
                                  Validation.ErrorTemplate="{StaticResource ErrorTemplateRight}"
                                  SelectedItem="{Binding TraceLevelApp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}"
                                  IsSynchronizedWithCurrentItem="false"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Width="150">Symbolresolver trace level:</Label>
                        <ComboBox Width="150"
                                  ItemsSource="{Binding Source={StaticResource SourceLevelsEnum}}"
                                  Validation.ErrorTemplate="{StaticResource ErrorTemplateRight}"
                                  SelectedItem="{Binding TraceLevelSymbolresolver, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}"
                                  IsSynchronizedWithCurrentItem="false"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Width="150">etwlib trace level:</Label>
                        <ComboBox Width="150"
                                  ItemsSource="{Binding Source={StaticResource SourceLevelsEnum}}"
                                  Validation.ErrorTemplate="{StaticResource ErrorTemplateRight}"
                                  SelectedItem="{Binding TraceLevelEtwlib, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}"
                                  IsSynchronizedWithCurrentItem="false"/>
                    </StackPanel>
                </StackPanel>
                </AdornerDecorator>
            </TabItem>
            <TabItem Header="Formatters">
                <AdornerDecorator>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <StackPanel Orientation="Vertical" Margin="5"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left">
                        <Label Width="150" HorizontalAlignment="Left">Available:</Label>
                        <ListBox ItemsSource="{Binding Formatters,Mode=TwoWay}"
                                 Name="FormattersListBox"
                                 SelectionMode="Single"
                                 Width="Auto">
                            <ListBox.ItemTemplate>                                
                                <DataTemplate>
                                    <TextBlock Text="{Binding FunctionName}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Name="RemoveFormatterButton"
                            Command="{Binding RemoveFormatterCommand}"
                            CommandParameter="{Binding ElementName=FormattersListBox,Path=SelectedItem}"
                            Height="25"
                            Width="75"
                            Content="Remove"
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left"/>
                        <Label Width="150" HorizontalAlignment="Left">Name:</Label>
                        <TextBox Name="FunctionName"
                                 Text="{Binding ElementName=FormattersListBox,Path=SelectedItem.FunctionName}"/>
                        <Button Name="AddFormatterButton"
                                Command="{Binding AddFormatterCommand}"
                                CommandParameter="{Binding ElementName=FormattersListBox,Path=SelectedItem}"
                                Height="25"
                                Width="75"
                                Content="Add"
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left"/>
                        <Button Name="UpdateFormatterButton"
                                Click="UpdateFormatterButton_Click"
                                Height="25"
                                Width="75"
                                Content="Update"
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left"/>
                        <Button Name="DefaultFormatterButton"
                                Command="{Binding AddDefaultFormattersCommand}"
                                Height="25"
                                Width="75"
                                Content="Add Default"
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="5"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left">
                        <Label Width="150" HorizontalAlignment="Left">C# Code:</Label>
                        <TextBox TextWrapping="Wrap"
                                 Text="{Binding ElementName=FormattersListBox,Path=SelectedItem.Body}"
                                 AcceptsReturn="True"
                                 MinHeight="200"
                                 MinWidth="200"
                                 Name="FunctionBody"
                                 Validation.ErrorTemplate="{StaticResource ErrorTemplateBelow}"/>
                    </StackPanel>
                </StackPanel>
                </AdornerDecorator>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>